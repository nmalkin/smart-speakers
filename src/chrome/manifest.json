{
    "name": "Berkeley Smart Speaker Study",
    "version": "2019.2.14",
    "description": "An extension that allows you to participate in the Berkeley Smart Speaker Study",
    "manifest_version": 2,
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "assets/logo.png"
    },
    "content_scripts": [
        {
            "matches": ["https://berkeley.qualtrics.com/jfe/form/*"],
            "all_frames": true,
            "js": ["content.js"]
        }
    ],
    "icons": {
        "16": "assets/logo.png",
        "32": "assets/logo.png",
        "48": "assets/logo.png",
        "128": "assets/logo.png"
    },
    "incognito": "split",
    "options_page": "assets/diagnostics.html",
    "permissions": [
        "storage",
        "https://myactivity.google.com/",
        "https://www.amazon.com/"
    ]
}
