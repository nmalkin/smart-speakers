{
    "name": "Passive Listening Activity Scraper",
    "version": "1.0",
    "description": "Scrape stored audio recordings from Google/Alexa Activity.",
    "manifest_version": 2,
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon": "assets/icsi.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://berkeley.qualtrics.com/jfe/form/SV_7NzNJ4QmCe4uE05"
            ],
            "js": ["content.js"]
        }
    ],
    "icons": {
        "16": "assets/icsi.png",
        "32": "assets/icsi.png",
        "48": "assets/icsi.png",
        "128": "assets/icsi.png"
    },
    "incognito": "split",
    "options_ui": {
        "page": "options.html"
    },
    "permissions": ["https://myactivity.google.com/", "https://www.amazon.com/"]
}
