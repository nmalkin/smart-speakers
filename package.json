{
    "name": "smart-speakers",
    "version": "0.0.0",
    "dependencies": {
        "@types/chrome": "0.0.75",
        "@types/firefox-webext-browser": "^64.0.0",
        "@types/mocha": "^5.2.5"
    },
    "devDependencies": {
        "@babel/core": "^7.2.0",
        "@babel/preset-env": "^7.2.0",
        "@types/jest": "^23.3.10",
        "@types/puppeteer": "^1.11.1",
        "babel-core": "^7.0.0-bridge.0",
        "babel-jest": "^23.6.0",
        "copy-webpack-plugin": "^4.6.0",
        "eslint": "^5.10.0",
        "eslint-config-airbnb-base": "^13.1.0",
        "eslint-config-prettier": "^3.3.0",
        "eslint-plugin-import": "^2.14.0",
        "husky": "^1.2.0",
        "jest": "^23.6.0",
        "jest-fetch-mock": "^1.7.5",
        "lint-staged": "^8.1.0",
        "prettier": "^1.15.3",
        "puppeteer": "^1.11.0",
        "ts-jest": "^23.10.5",
        "ts-loader": "^5.3.1",
        "tslint": "^5.11.0",
        "typescript": "^3.2.2",
        "webpack": "^4.27.1",
        "webpack-cli": "^3.1.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "linters": {
            "*.js": [
                "eslint --fix",
                "git add"
            ],
            "*.ts": [
                "tslint -c tslint.json 'src/**/*.ts' --fix",
                "git add"
            ],
            "*.{js,ts,json,css,md}": [
                "prettier --write",
                "git add"
            ]
        },
        "ignore": [
            "assets/*",
            "src/qualtrics/*"
        ]
    },
    "scripts": {
        "lint": "tslint -c tslint.json 'src/**/*.ts' && eslint test",
        "build": "webpack",
        "package": "mkdir -p build && cd chrome_extension && zip -r --exclude=*.DS_Store* ../build/chrome_extension.zip *",
        "test": "jest --env=jsdom --verbose",
        "watch": "webpack --watch"
    },
    "jest": {
        "automock": false,
        "setupFiles": [
            "./setupJest.js"
        ]
    }
}
